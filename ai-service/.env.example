# Flask AI Service Configuration

# Flask Server Configuration
FLASK_PORT=5000
FLASK_DEBUG=false
FLASK_ENV=production

# Laravel Application URL (for cross-service communication)
LARAVEL_BASE_URL=https://your-laravel-app.up.railway.app

# Model Configuration
MODEL_SAVE_PATH=models/
DATA_PATH=data/

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/ai-service.log

# API Security (optional)
API_KEY=
ALLOWED_ORIGINS=*

# Performance Configuration
MAX_WORKERS=4
TIMEOUT_SECONDS=60

# Model Training Configuration (for development/training)
TRAINING_ENABLED=false
TRAINING_DATA_PATH=data/iso21001_training_data.csv

# Railway Configuration
# Port is automatically set by Railway via $PORT environment variable
# The service will use $PORT if available, otherwise fallback to FLASK_PORT

# Health Check Configuration
HEALTH_CHECK_ENABLED=true

# Model Settings
MODEL_CACHE_ENABLED=true
MODEL_WARM_UP=true

# Service Version
SERVICE_VERSION=1.0.0
