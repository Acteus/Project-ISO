{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "pip install --timeout=900 --no-cache-dir -r requirements.txt && python -m nltk.downloader punkt stopwords averaged_perceptron_tagger"
  },
  "deploy": {
    "numReplicas": 1,
    "startCommand": "gunicorn --bind 0.0.0.0:$PORT --workers 2 --threads 2 --timeout 120 --access-logfile - --error-logfile - app:app",
    "healthcheckPath": "/health",
    "healthcheckTimeout": 300,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
